<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".VoterActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_marginStart="10dp"
        android:textColor="#1c1160"
        android:textSize="40sp"
        android:text="Voter ID Card"
        android:fontFamily="@font/bubble_letters"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_above="@id/bannerContainer"
        android:layout_below="@id/txt"
        android:layout_marginTop="10dp"
        android:background="@drawable/background"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnApply"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:text="@string/applyOnline"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@drawable/btn_back"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDownload"
                android:layout_marginTop="10dp"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:text="@string/downloadVoter"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@drawable/btn_back"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnEdit"
                android:layout_marginTop="10dp"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:text="@string/editVoter"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@drawable/btn_back"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSearch"
                android:layout_marginTop="10dp"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:text="@string/searchVoter"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@drawable/btn_back"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTrack"
                android:layout_marginTop="10dp"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:text="@string/trackApp"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@drawable/btn_back"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnReprint"
                android:layout_marginTop="10dp"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:text="@string/reprint"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@drawable/btn_back"/>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnOfficial"
                android:layout_marginTop="10dp"
                style="@android:style/Widget.Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColor="@color/white"
                android:text="@string/voterOfficial"
                android:textStyle="bold"
                android:textSize="20sp"
                android:background="@drawable/btn_back"/>

        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/bannerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>